@Article{Ningrum2025b,
  author      = {Ningrum, Panggih Kusuma and Mayr, Philipp and Smirnova, Nina and Atanassova, Iana},
  title       = {Annotating scientific uncertainty: A comprehensive model using linguistic patterns and comparison with existing approaches},
  doi         = {10.1016/j.joi.2025.101661},
  issn        = {1751-1577},
  number      = {2},
  volume      = {19},
  author+an   = {1=student;4=me},
