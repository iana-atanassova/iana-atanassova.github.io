@Article{Gutehrle2022,
  author   = {Nicolas Gutehrlé and Iana Atanassova},
  title    = {{Processing the structure of documents: Logical Layout Analysis of historical newspapers in French}},
  doi      = {10.46298/jdmdh.9093},
  url      = {https://jdmdh.episciences.org/9614},
  volume   = {{NLP4DH}},
  author+an   = {2=me;1=student},
  bibtex_show = {true},
  journal     = {{Journal of Data Mining \& Digital Humanities}},
  keywords    = {Logical Layout Analysis, Historical Newspapers, Natural Language Processing, Rule-based system,
